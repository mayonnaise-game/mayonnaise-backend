{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // "indent": ["error", 2],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["off", "always"],
    "no-unused-vars": ["warn"],
    // "no-console": "off",
    "no-process-exit": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "func-names": "off"
  }
}
